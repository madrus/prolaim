{
    "excludeFiles": [
        "node_modules/**",
        "bower_components/**"
    ],
    "requireCurlyBraces": [
        "if",
        "else",
        "for",
        "while",
        "do",
        "try",
        "catch"
    ],
    "requireOperatorBeforeLineBreak": true,
    "requireCamelCaseOrUpperCaseIdentifiers": true,
    "maximumLineLength": {
        "value": 120,
        "allExcept": [
            "regex",
            "comments"
        ]
    },
    "validateIndentation": 4,
    "validateQuoteMarks": "'",
    "disallowMultipleLineStrings": true,
    "disallowMixedSpacesAndTabs": true,
    "disallowTrailingWhitespace": "ignoreEmptyLines",
    "disallowSpaceAfterPrefixUnaryOperators": true,
    "disallowMultipleVarDecl": null,
    "requireSpaceAfterKeywords": [
        "if",
        "else",
        "for",
        "while",
        "do",
        "switch",
        "return",
        "try",
        "catch"
    ],
    "requireSpaceBeforeBinaryOperators": [
        "=",
        "+=",
        "-=",
        "*=",
        "/=",
        "%=",
        "<<=",
        ">>=",
        ">>>=",
        "&=",
        "|=",
        "^=",
        "+=",
        "+",
        "-",
        "*",
        "/",
        "%",
        "<<",
        ">>",
        ">>>",
        "&",
        "|",
        "^",
        "&&",
        "||",
        "===",
        "==",
        ">=",
        "<=",
        "<",
        ">",
        "!=",
        "!=="
    ],
    "requireSpaceAfterBinaryOperators": true,
    "requireSpacesInConditionalExpression": true,
    "requireSpaceBeforeBlockStatements": true,
    "requireLineFeedAtFileEnd": true,
    "disallowSpacesInsideObjectBrackets": null,
    // "disallowSpacesInsideObjectBrackets": {
    //     "allExcept": ["}"]
    // },

    "disallowSpacesInsideArrayBrackets": {
        "allExcept": [
            "[",
            "]",
            "{",
            "}"
        ]
    },
    "disallowSpacesInsideBrackets": {
        "allExcept": [
            "[",
            "]",
            "{",
            "}"
        ]
    },
    "disallowSpacesInsideParentheses": true,
    "validateJSDoc": {
        "checkParamNames": true,
        "requireParamTypes": true
    },
    "disallowMultipleLineBreaks": true,
    "disallowCommaBeforeLineBreak": null,
    "disallowDanglingUnderscores": null, // rule is not active
    "disallowEmptyBlocks": true,
    "disallowTrailingComma": null, // rule is not active
    "requireCommaBeforeLineBreak": true,
    "requireDotNotation": true,
    "requireMultipleVarDecl": null, // rule is not active
    "requireParenthesesAroundIIFE": true
}
